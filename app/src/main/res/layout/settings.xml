<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/on_offBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:text="ToggleButton"
        android:textColor="@color/colorPrimaryDark"
        android:theme="@style/Base.Widget.AppCompat.Button.Borderless"
        tools:ignore="HardcodedText"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/clearTasksBtn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical|fill"
        android:text="Use this to switch on/off Namaz Silence"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:ignore="HardcodedText"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_toStartOf="@+id/on_offBtn"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use this to clear all tasks"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:ignore="HardcodedText"
        android:layout_marginStart="38dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/clearTasksBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center_vertical|center"
        android:text="Clear"
        android:textColor="@color/colorPrimaryDark"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp" />

</RelativeLayout>